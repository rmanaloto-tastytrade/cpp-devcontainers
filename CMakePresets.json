        "CMAKE_EXE_LINKER_FLAGS_DEBUG": "-fsanitize=address -fno-omit-frame-pointer -g",
        "CMAKE_SHARED_LINKER_FLAGS_DEBUG": "-fsanitize=address -fno-omit-frame-pointer -g",
